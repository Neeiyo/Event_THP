<% flash.each do |type, msg| %>
  <div class="alert alert-danger" role="alert">
    <%= msg %>
  </div>
<% end %>

<% if user_signed_in? %>
<div class="container">
<div class="row">
  <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
    <div class="card card-signin my-5">
      <div class="card-body">
        <h5 class="card-title text-center">New Event</h5>
  <!-- ... -->
  <div id= "form">
  <%= form_tag events_path(action: 'create'), method: "post" do %>

    
    <p class="label"><%= label_tag 'start_date :' %></p>
    <p class="box"><%= text_field_tag 'start_date', params["start_date"], class: 'form-control' %></p>
